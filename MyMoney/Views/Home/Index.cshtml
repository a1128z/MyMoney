@using MyMoney.Enum
@model MyMoney.ViewModels.MoneyTxnViewModel

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="well" style="margin-top: 90px">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.TxnType, "類別", htmlAttributes: new {@class = "control-label col-sm-2"})
                <div class="col-md-10">
                    @Html.DropDownList("TxnType", EnumHelper.GetSelectList(typeof (TxnType)), "請選擇", new {@class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Money, "金額", htmlAttributes: new {@class = "control-label col-sm-2"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Money, new {htmlAttributes = new {@class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Date, "日期", htmlAttributes: new {@class = "control-label col-sm-2"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Date, new {htmlAttributes = new {@class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Remark, "備註", htmlAttributes: new {@class = "control-label col-sm-2"})
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Remark, new {@class = "form-control"} )
                </div>
            </div>

            <div class="form-group">
                <div class="pull-right">
                    <input type="submit" value="送出" class="btn btn-default"/>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.Action("List");
</div>

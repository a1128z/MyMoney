@using MyMoney.Enum
@model MyMoney.ViewModels.MoneyTxnViewModel

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="well">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            <div class="form-group">
                @Html.LabelFor(model => model.TxnType, "類別", htmlAttributes: new {@class = "control-label col-sm-2"})
                <div class="col-sm-10">
                    @Html.DropDownList("TxnType", EnumHelper.GetSelectList(typeof (TxnType)), "請選擇", new {@class = "form-control"})
                    @Html.ValidationMessageFor(model => model.TxnType, "", new {@class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Money, "金額", htmlAttributes: new {@class = "control-label col-sm-2"})
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Money, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Money, "", new {@class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Date, "日期", htmlAttributes: new {@class = "control-label col-sm-2"})
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Date, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Date, "", new {@class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Remark, "備註", htmlAttributes: new {@class = "control-label col-sm-2"})
                <div class="col-sm-10">
                    @Html.TextAreaFor(model => model.Remark, new {@class = "form-control"})
                    @Html.ValidationMessageFor(model => model.Remark, "", new {@class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-8 col-sm-4">
                    <button type="submit" class="btn btn-default">送出</button>
                </div>
            </div>
        </div>
    }
</div>
 @Html.Action("List", "Home");
